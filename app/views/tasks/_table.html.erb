<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Creator</th>
			<th>Assignee</th>
			<th>Description</th>
			<th>Finished on</th>
			<th>Status</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% tasks.each do |task| %>
			<tr>
				<td><%= task.name %></td>
				<td><%= task.creator ? task.creator.email : "" %></td>
				<td><%= task.assignee ? task.assignee.email : "" %></td>
				<td><%= task.description %></td>
				<td><%= task.finished_on %></td>
				<td><%= task.finished? ? "done" : "TODO" %></td>
				<td><%= link_to 'Show', task %></td>
				<td><%= link_to 'Edit', edit_task_path(task) %></td>
				<td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>
