<table class="table table-striped">
	<thead>
		<tr>
			<th>Status</th>
			<th>Reward</th>
			<th>Name</th>
			<th>Description</th>
			<th colspan="2"></th>
		</tr>
	</thead>

	<tbody>
		<% tasks.each do |task| %>
			<tr>
				<td><%= task.finished? ? link_to('v', unmark_task_path(task), method: :post) : link_to('x', mark_task_path(task), method: :post) %></td>
				<td><%= task.reward %></td>
				<td><%= task.name %></td>
				<td><%= task.description %></td>
				<td><%= link_to 'Edit', edit_task_path(task) %></td>
				<td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>
